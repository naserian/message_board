{{#if updateQuestionForm}}
  <h4>Update {{question.author}}'s {{question.question}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="question">Question</label>
        {{input value=question id="question" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="question">Question</label>
        {{input value=question id="question" placeholder=question.question}}
      </div>



      <button {{action 'update' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
